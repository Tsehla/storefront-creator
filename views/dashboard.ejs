<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Storefront Creator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-5">
        <h2>Your Stores</h2>
        <div class="row mt-4">
            <% if (stores.length === 0) { %>
                <div class="col-12">
                    <div class="alert alert-info">
                        You haven't created any stores yet. 
                        <a href="/create-store" class="alert-link">Create your first store</a>
                    </div>
                </div>
            <% } else { %>
                <% stores.forEach(function(store) { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <% if (store.bannerImage?.url) { %>
                                <img src="<%= store.bannerImage.url %>" class="card-img-top" alt="<%= store.storeName %>">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= store.storeName %></h5>
                                <p class="card-text"><%= store.description %></p>
                                <div class="d-flex justify-content-between">
                                    <a href="/store/<%= store._id %>" class="btn btn-primary">View Store</a>
                                    <a href="/store/<%= store._id %>/edit" class="btn btn-secondary">Edit Store</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
        <div class="mt-4">
            <a href="/create-store" class="btn btn-success">Create New Store</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 